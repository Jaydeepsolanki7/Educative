<header class="bg-white shadow-md" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    
    <!-- Brand -->
    <%= link_to "educative", root_path, class: "text-2xl font-bold text-indigo-700 hover:text-indigo-800" %>
    
    <!-- Desktop Nav -->
    <nav class="hidden md:flex space-x-8">
      <%= link_to "Features", '#', class: "text-gray-700 hover:text-indigo-600 font-medium" %>
      <%= link_to "Pricing", '#', class: "text-gray-700 hover:text-indigo-600 font-medium" %>
      <%= link_to "Contact", '#', class: "text-gray-700 hover:text-indigo-600 font-medium" %>
    </nav>
    
    <!-- Auth Buttons -->
    <div class="space-x-4 hidden md:flex">
      <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg transition-colors" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "border border-indigo-600 text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg transition-colors" %>
      <% end %>
    </div>

    <!-- Mobile Menu Button -->
    <button class="md:hidden text-gray-700 focus:outline-none" data-action="click->mobile-menu#toggle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Nav -->
  <nav data-mobile-menu-target="menu" class="hidden md:hidden px-6 pb-4 space-y-2 bg-gray-50">
    <%= link_to "Features", '#', class: "block text-gray-700 hover:text-indigo-600 font-medium" %>
    <%= link_to "Pricing", '#', class: "block text-gray-700 hover:text-indigo-600 font-medium" %>
    <%= link_to "Contact", '#', class: "block text-gray-700 hover:text-indigo-600 font-medium" %>

    <% if user_signed_in? %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "w-full text-left bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "block bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "block border border-indigo-600 text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg" %>
    <% end %>
  </nav>
</header>
