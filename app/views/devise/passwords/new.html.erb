<div class="min-h-screen w-full flex items-center justify-center bg-gray-50 px-4">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-lg p-8 space-y-6">
    
    <!-- Heading -->
    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900">Forgot your password?</h2>
      <p class="mt-2 text-sm text-gray-600">
        Enter your email and weâ€™ll send you instructions to reset your password.
      </p>
    </div>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      <%= render "confirmables/shared/error_messages", resource: resource %>

      <!-- Email field -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <!-- Submit button -->
      <div>
        <%= f.submit "Send reset instructions",
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 font-medium" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="text-sm text-center text-gray-500">
      <%= render "confirmables/shared/links" %>
    </div>
  </div>
</div>
