<!-- Force vertical stacking -->
<div class="flex flex-col w-full">

  <!-- Row 1: Hero Section -->
  <section class="w-full bg-gradient-to-br from-indigo-50 to-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex flex-col lg:flex-row items-center gap-12">
      
      <!-- Text -->
      <div class="text-center lg:text-left flex-1">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
          <%= @product.name %>
        </h1>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl">
          <%= @product.description %>
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <%= link_to "Buy Now", new_user_session_path, 
              class: "inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium text-base transition shadow-md hover:shadow-lg" %>
          <% if user_signed_in? %>
            <%= link_to "Edit Product", edit_product_path(@product),
                class: "inline-block bg-white hover:bg-gray-50 text-gray-800 border border-gray-300 px-4 py-3 rounded-lg font-medium text-sm transition" %>
          <% end %>
        </div>
      </div>

      <!-- Image -->
      <div class="flex justify-center flex-1">
        <% if @product.image.attached? %>
          <%= image_tag @product.image, alt: @product.name, class: "w-64 sm:w-80 lg:w-96 h-auto object-contain rounded-xl shadow-lg" %>
        <% else %>
          <div class="bg-gray-200 border-2 border-dashed rounded-xl w-64 sm:w-80 lg:w-96 h-64 sm:h-80 lg:h-96 flex items-center justify-center text-gray-500">
            Product Image
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Row 2: Explore Section with Tabs -->
  <section class="w-full bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 flex flex-col gap-6">
      
      <!-- Heading + Search -->
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <h2 class="text-2xl font-bold text-gray-900">Explore Everything <%= @product.name %></h2>
        <div class="flex rounded-md shadow-sm w-full md:w-auto">
          <input type="text" class="py-2 px-4 block w-full rounded-l-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Search courses...">
          <button class="inline-flex items-center px-4 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-700 text-sm font-medium">
            Search
          </button>
        </div>
      </div>

      <!-- Tabs -->
      <div data-controller="tabs">
        <nav class="border-b border-gray-200 flex space-x-8">
          <button data-action="tabs#show" data-tabs-target="tab" data-tabs-name="courses" class="active-tab">
            Courses (<%= @product.courses.count %>)
          </button>
          <button data-action="tabs#show" data-tabs-target="tab" data-tabs-name="paths">
            Paths (0)
          </button>
          <button data-action="tabs#show" data-tabs-target="tab" data-tabs-name="assessments">
            Assessments (<%= @product.assessments.count %>)
          </button>
          <button data-action="tabs#show" data-tabs-target="tab" data-tabs-name="projects">
            Projects (0)
          </button>
        </nav>

        <!-- Content sections -->
        <!-- Courses Tab -->
        <div data-tabs-target="content" data-tabs-name="courses" class="block">
          <div class="grid gap-6 mt-6">
            <% @product.courses.each do |course| %>
              <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden hover:shadow-md transition">
                <div class="p-6 flex flex-col lg:flex-row gap-6">
                  
                  <!-- Course Image -->
                  <%= link_to product_path(@product), class: "block" do %>
                    <div class="flex-shrink-0">
                      <% if course.image.attached? %>
                        <%= image_tag course.image, class: "w-24 h-24 object-cover rounded-lg" %>
                      <% else %>
                        <div class="bg-gray-200 border-2 border-dashed rounded-lg w-24 h-24 flex items-center justify-center text-gray-500 text-xs text-center p-2">
                          Course Image
                        </div>
                      <% end %>
                    </div>
                  <% end %>

                  <!-- Course Details -->
                  <div class="flex-grow">
                    <h3 class="text-xl font-bold text-gray-900 mb-2"><%= course.title %></h3>
                    <p class="text-gray-600 mb-4 text-sm"><%= truncate(course.description, length: 120) %></p>
                    
                    <div class="flex flex-wrap items-center gap-3 text-sm">
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-50 text-indigo-700">
                        85 hrs
                      </span>
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-indigo-50 text-indigo-700">
                        Difficulty: <%= course.difficulty %>
                      </span>
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-green-50 text-green-700">
                        414 Challenges
                      </span>
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-purple-50 text-purple-700">
                        415 Quizzes
                      </span>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Paths Tab -->
        <div data-tabs-target="content" data-tabs-name="paths" class="hidden">
          <p class="text-gray-600 mt-6">No paths yet.</p>
        </div>

        <!-- Assessments Tab -->
        
        <div data-tabs-target="content" data-tabs-name="assessments" class="hidden">
        <div class="grid gap-6 mt-6">
          <% @product.assessments.each do |assessment| %>
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden hover:shadow-md transition">
              <div class="p-6 flex flex-col lg:flex-row gap-6">
                
                <!-- Assessment Image -->
                <div class="flex-shrink-0">
                  <% if assessment.image.attached? %>
                    <%= image_tag assessment.image, class: "w-24 h-24 object-cover rounded-lg" %>
                  <% else %>
                    <div class="bg-gray-200 border-2 border-dashed rounded-lg w-24 h-24 flex items-center justify-center text-gray-500 text-xs text-center p-2">
                      Assessment Image
                    </div>
                  <% end %>
                </div>
      
                <!-- Assessment Details -->
                <div class="flex-grow">
                  <h3 class="text-xl font-bold text-gray-900 mb-2"><%= assessment.title %></h3>
                  <p class="text-gray-600 text-sm mb-4"><%= truncate(assessment.description, length: 120) %></p>
                  
                  <!-- Example badges (optional, like courses) -->
                  <div class="flex flex-wrap items-center gap-3 text-sm">
                    <span class="inline-flex items-center px-3 py-1 rounded-full bg-green-50 text-green-700">
                      <%= "#{assessment.duration} hrs" || "30 mins" %>
                    </span>
                  </div>
                </div>
      
              </div>
            </div>
          <% end %>
        </div>
      </div>
      

        <!-- Projects Tab -->
        <div data-tabs-target="content" data-tabs-name="projects" class="hidden">
          <p class="text-gray-600 mt-6">No projects yet.</p>
        </div>
      </div>

    </div>
  </section>

</div>
