<div class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-bold mb-6">Add New Product</h1>

  <%= form_with model: @product, local: true, html: { multipart: true } do |form| %>
    <%= form.hidden_field :product_creator_id, value: current_user.id %>

    Welcome, <span class="text-indigo-500"><%= current_user&.email %></span> ðŸ‘‹

    <div class="mb-4">
      <%= form.label :name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :name, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block font-medium text-gray-700" %>
      <%= form.text_area :description, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :cost, class: "block font-medium text-gray-700" %>
      <%= form.number_field :cost, step: 0.01, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>

    <div class="mb-6">
      <%= form.label :image, class: "block font-medium text-gray-700" %>
      <%= form.file_field :image, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>

    <%= form.submit "Create Product", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition" %>
  <% end %>
</div>
